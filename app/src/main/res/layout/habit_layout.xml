<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/habit_background"
    android:clickable="true"
    android:longClickable="true"
    android:padding="10dp">

    <TextView
        android:id="@+id/habit_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="TEST"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/habit_tv_strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="TEST"
        android:textColor="@color/purple"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/habit_cb_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/habit_tv_strike"
        android:layout_alignParentRight="true"
        android:button="@drawable/checkbox_icon"
        android:onClick="completedHabitAction" />

</RelativeLayout>