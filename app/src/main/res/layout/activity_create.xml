<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity">

    <TextView
        android:id="@+id/create_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:text="@string/new_task"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/create_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_title"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:autofillHints=""
        android:hint="@string/habit_name"
        android:inputType="" />

    <EditText
        android:id="@+id/create_et_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_et_name"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:autofillHints=""
        android:hint="What is your goal?"
        android:inputType="" />

    <EditText
        android:id="@+id/create_et_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_et_goal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:autofillHints=""
        android:hint="Who do you want to be?"
        android:inputType="" />

    <Button
        android:id="@+id/crete_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_et_person"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:text="@string/save" />


</RelativeLayout>